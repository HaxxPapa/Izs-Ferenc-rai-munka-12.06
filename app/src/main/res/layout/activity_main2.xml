<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diak.myapplication.MainActivity2">
    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="187dp"
        android:text="Next Activity" />

    <Button
        android:id="@+id/btn_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_next"
        android:layout_alignStart="@+id/btn_next"
        android:layout_below="@+id/btn_next"
        android:layout_marginTop="18dp"
        android:text="name change" />

    <Button
        android:id="@+id/btn_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_change"
        android:layout_alignStart="@+id/btn_change"
        android:layout_below="@+id/btn_change"
        android:layout_marginTop="22dp"
        android:text="information" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_info"
        android:layout_alignStart="@+id/btn_info"
        android:layout_below="@+id/btn_info"
        android:layout_marginTop="22dp"
        android:text="exit" />

</RelativeLayout>
